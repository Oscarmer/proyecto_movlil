<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemCommentsComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="Mi Comentario"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/ItemCommentsComment" />

        <Spinner
            android:id="@+id/spinnerScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/hintComment"
            android:inputType="textMultiLine"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/brSaveComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/primaryDarkColor"
            android:text="Enviar Comentario"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="10dp"/>



    </LinearLayout>

</LinearLayout>